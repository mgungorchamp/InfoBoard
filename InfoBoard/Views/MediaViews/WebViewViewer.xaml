             xmlns:models="clr-namespace:InfoBoard.Models"
             x:Class="InfoBoard.Views.MediaViews.WebViewViewer"
             BackgroundColor="Black"
             Title="WebViewViewer">
    <!--<ContentPage.BindingContext>
        <models:Media/>
    </ContentPage.BindingContext>-->
    <Grid x:Name="myGrid">
        <!--<WebView 
